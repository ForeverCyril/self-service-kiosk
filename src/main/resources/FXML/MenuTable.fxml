<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.ebu6304gp42.Controller.Managing.menuTable.MenuTableController">
   <children>
      <TableView fx:id="table" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn prefWidth="75.0" text="Name">
               <cellValueFactory><PropertyValueFactory property="name" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="75.0" text="Price">
               <cellValueFactory><PropertyValueFactory property="price" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="75.0" text="Remain">
               <cellValueFactory><PropertyValueFactory property="remain" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="75.0" text="Status">
               <cellValueFactory><PropertyValueFactory property="status" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="300.0" sortable="false" text="Description">
               <cellValueFactory><PropertyValueFactory property="description" />
               </cellValueFactory>
            </TableColumn>
         </columns>
      </TableView>
      <HBox nodeOrientation="RIGHT_TO_LEFT" prefWidth="200.0" spacing="12.0">
         <Button mnemonicParsing="false" onMouseClicked="#onSaveBtnClick" prefWidth="60.0" text="Save" />
          <Button mnemonicParsing="false" onMouseClicked="#onAddBtnClick" prefWidth="60.0" text="Add" />
         <VBox.margin>
            <Insets bottom="3.0" left="6.0" right="6.0" top="3.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
